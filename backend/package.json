{
  "name": "simulador-rifas-backend",
  "version": "1.0.0",
  "description": "Backend para el simulador de rifas - TalentoTech",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "init-db": "node database/init.js",
    "sample-data": "node database/sample-data.js",
    "demo-content": "node database/demo-content.js",
    "setup-prod": "node database/setup-production.js",
    "reset-db": "npm run init-db && npm run sample-data",
    "reset-demo": "npm run init-db && npm run demo-content",
    "migrate-security": "node database/migrate-security.js",
    "verify": "node verificar.js",
    "test": "npm run verify",
    "postinstall": "npm run setup-prod && npm run migrate-security"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.11.3",
    "resend": "^2.1.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "rifas",
    "simulador",
    "talentotech"
  ],
  "author": "TalentoTech Student",
  "license": "MIT"
}
